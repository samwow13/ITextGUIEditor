@model iTextDesignerWithGUI.Models.test1Models.test1Instance
@using System
@using System.Linq
@using System.Collections.Generic

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Model.Name</title>
    <link href="globalStyles.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Header with Title and Info -->
        <header>
            <div class="title">@Model.Model.Name</div>
            <div class="graphic">
                <img src="logo.png" alt="Logo">
            </div>
        </header>

        <!-- Introduction -->
        <div class="intro-text">
            <p>@Model.Model.Description</p>
            <p>Created: @Model.Model.CreatedAt</p>
            <p>Status: @(Model.Model.IsActive ? "Active" : "Inactive")</p>
        </div>

        <!-- Sections -->
        @foreach (var sectionItem in Model.Properties.Sections)
        {
            <div class="three-column-wrapper">
                <h2>@sectionItem.Title</h2>
                <table class="section-table">
                    <thead>
                        <tr>
                            <th>Field Name</th>
                            <th>Type</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fieldItem in sectionItem.Fields)
                        {
                            <tr>
                                <td>@fieldItem.Name</td>
                                <td>@fieldItem.Type</td>
                                <td>
                                    @{
                                        bool isChecked = false;
                                        string dateStr = string.Empty;
                                        string currencyStr = string.Empty;

                                        if (fieldItem.Type == "checkbox")
                                        {
                                            if (fieldItem.Value != null)
                                            {
                                                if (fieldItem.Value is bool)
                                                {
                                                    isChecked = (bool)fieldItem.Value;
                                                }
                                                else
                                                {
                                                    bool.TryParse(fieldItem.Value.ToString(), out isChecked);
                                                }
                                            }
                                        }
                                        else if (fieldItem.Type == "date")
                                        {
                                            if (fieldItem.Value != null)
                                            {
                                                DateTime dateValue;
                                                if (DateTime.TryParse(fieldItem.Value.ToString(), out dateValue))
                                                {
                                                    dateStr = dateValue.ToString("MM/dd/yyyy");
                                                }
                                                else
                                                {
                                                    dateStr = fieldItem.Value.ToString();
                                                }
                                            }
                                        }
                                        else if (fieldItem.Type == "currency")
                                        {
                                            if (fieldItem.Value != null)
                                            {
                                                decimal amount;
                                                if (decimal.TryParse(fieldItem.Value.ToString(), out amount))
                                                {
                                                    currencyStr = string.Format("${0:0.00}", amount);
                                                }
                                                else
                                                {
                                                    currencyStr = fieldItem.Value.ToString();
                                                }
                                            }
                                        }
                                    }

                                    @if (fieldItem.Type == "checkbox")
                                    {
                                        <div class="checkbox-container">
                                            <input type="checkbox" @(isChecked ? "checked class=\"checked\"" : "") disabled>
                                            <label>@(isChecked ? "Yes" : "No")</label>
                                        </div>
                                    }
                                    else if (fieldItem.Type == "date")
                                    {
                                        @dateStr
                                    }
                                    else if (fieldItem.Type == "currency")
                                    {
                                        @currencyStr
                                    }
                                    else if (fieldItem.Type == "number")
                                    {
                                        @fieldItem.Value
                                    }
                                    else
                                    {
                                        @fieldItem.Value
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- Additional Information -->
        <div class="full-table">
            <table class="full-table">
                <tr>
                    <th>ID</th>
                    <td>@Model.Model.Id</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>@(Model.Model.IsActive ? "Active" : "Inactive")</td>
                </tr>
                <tr>
                    <th>Sections</th>
                    <td>@Model.Properties.Sections.Count()</td>
                </tr>
                <tr>
                    <th>Total Fields</th>
                    <td>@Model.Properties.Sections.SelectMany(s => s.Fields).Count()</td>
                </tr>
            </table>
        </div>

        <!-- Footer -->
        <footer>
            <p>Document ID: @Model.Model.Id | Generated: @System.DateTime.Now.ToString("MM/dd/yyyy HH:mm:ss")</p>
        </footer>
    </div>
</body>
</html>