@model iTextDesignerWithGUI.Models.TesterModels.TesterInstance
@using System
@using System.Linq
@using System.Collections.Generic
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@Model.Model.Name - Details</title>
    <link href="globalStyles.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Header Section -->
        <header>
            <div class="title">@Model.Model.Name</div>
            <div class="graphic">
                <!-- Placeholder for graphic; replace with actual image path if needed -->
                <img src="path/to/image.png" alt="Graphic">
            </div>
        </header>

        <!-- Introduction Section -->
        <div class="intro-text">
            <p>@Model.Model.Description</p>
            <p>Created on: @Model.Model.CreatedAt</p>
            <p>Status: @(Model.Model.IsActive ? "Active" : "Inactive")</p>
        </div>

        <!-- Dynamic Section (if exists) -->
        @if (Model.Properties?.Sections != null && Model.Properties.Sections.Any())
        {
            var sectionItem = Model.Properties.Sections.First();
            <div class="section">
                <h2>@sectionItem.Title</h2>
                <table class="section-table">
                    <tbody>
                        @if (sectionItem.Fields != null)
                        {
                            foreach (var field in sectionItem.Fields)
                            {
                                <tr>
                                    <th>@field.Name</th>
                                    <td>
                                        @if (field.Type == "checkbox")
                                        {
                                            <div class="checkbox-container">
                                                <input type="checkbox" @(System.Convert.ToBoolean(field.Value) ? "checked" : "") disabled>
                                            </div>
                                        }
                                        else
                                        {
                                            @field.Value
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- Footer Section -->
        <footer>
            <p>&copy; @(System.DateTime.Now.Year) Your Company Name. All rights reserved.</p>
        </footer>
    </div>
</body>
</html>
