@model iTextDesignerWithGUI.Models.TestRazorDataModels.TestRazorDataInstance

<!DOCTYPE html>
<html>
<head>
    <title>Test Razor Data Assessment</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .user-info {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .info-label {
            font-weight: bold;
            color: #495057;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">User Profile</h1>
        
        <div class="user-info">
            <div class="row mb-3">
                <div class="col-md-4">
                    <span class="info-label">Name:</span>
                    <span>@Model.User.Name</span>
                </div>
                <div class="col-md-4">
                    <span class="info-label">Email:</span>
                    <span>@Model.User.Email</span>
                </div>
                <div class="col-md-4">
                    <span class="info-label">User ID:</span>
                    <span>@Model.User.Id</span>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-4">
                    <span class="info-label">Account Status:</span>
                    <span class="badge @(Model.User.IsActive ? "bg-success" : "bg-danger")">
                        @(Model.User.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
                <div class="col-md-4">
                    <span class="info-label">Created:</span>
                    <span>@Model.User.CreatedAt.ToString("MMM dd, yyyy")</span>
                </div>
            </div>
        </div>

        <div class="preferences-info">
            <h2 class="h4 mb-3">Preferences</h2>
            <div class="row">
                <div class="col-md-4">
                    <span class="info-label">Theme:</span>
                    <span>@Model.Preferences.Theme</span>
                </div>
                <div class="col-md-4">
                    <span class="info-label">Language:</span>
                    <span>@Model.Preferences.Language</span>
                </div>
            </div>
        </div>
    </div>
</body>
</html>