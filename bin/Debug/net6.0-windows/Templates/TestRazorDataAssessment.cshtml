@model iTextDesignerWithGUI.Models.TestRazorDataModels.TestRazorDataInstance

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Assessment Report</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Base Styles */
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-color: #FFF;
            color: #000;
            font-size: 14px;
            margin: 20px;
        }
        
        /* Header Styles */
        header {
            border-bottom: 1px solid #000;
            margin-bottom: 20px;
            padding-bottom: 10px;
            overflow: hidden;
        }
        
        .title {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #2c3e50;
        }
        
        /* Section Styles */
        .section-header {
            font-size: 16px;
            font-weight: bold;
            margin: 0 0 10px 0;
            padding: 8px 12px;
            background-color: #2c3e50;
            color: #FFF;
            border-radius: 8px;
        }
        
        /* Content Containers */
        .info-container {
            border: 2px solid #2c3e50;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #f8f9fa;
        }
        
        .info-label {
            font-weight: bold;
            color: #2c3e50;
        }
        
        /* Table Styles */
        .data-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        
        .data-table th,
        .data-table td {
            padding: 8px;
            border: 1px solid #dee2e6;
        }
        
        .data-table th {
            background-color: #e9ecef;
            font-weight: bold;
            color: #2c3e50;
        }
        
        /* Status Badges */
        .status-badge {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1 class="title">User Assessment Report</h1>
        </header>

        <!-- User Information -->
        <div class="info-container">
            <h2 class="section-header">User Profile</h2>
            <div class="row mb-3">
                <div class="col-md-4">
                    <span class="info-label">Name:</span>
                    <span>@Model.User.Name</span>
                </div>
                <div class="col-md-4">
                    <span class="info-label">Email:</span>
                    <span>@Model.User.Email</span>
                </div>
                <div class="col-md-4">
                    <span class="info-label">User ID:</span>
                    <span>@Model.User.Id</span>
                </div>
            </div>
            
            <div class="row">
                @if (Model.User.Name != "John Doe")
                {
                    <div class="col-md-4">
                        <span class="info-label">Account Status:</span>
                        <span class="badge @(Model.User.IsActive ? "bg-success" : "bg-danger")">
                            @(Model.User.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                }
                <div class="col-md-4">
                    <span class="info-label">Created:</span>
                    <span>@Model.User.CreatedAt.ToString("MMM dd, yyyy")</span>
                </div>
            </div>
        </div>

        <!-- Preferences -->
        <div class="info-container">
            <h2 class="section-header">User Preferences</h2>
            <div class="row mb-3">
                <div class="col-md-4">
                    <span class="info-label">Theme:</span>
                    <span>@Model.Preferences.Theme</span>
                </div>
                <div class="col-md-4">
                    <span class="info-label">Language:</span>
                    <span>@Model.Preferences.Language</span>
                </div>
            </div>
            @if (Model.Preferences.Notifications != null)
            {
                <div class="row">
                    <div class="col-12">
                        <h3 class="h5 mb-2">Notification Settings</h3>
                        <div class="col-md-4">
                            <span class="info-label">Email Notifications:</span>
                            <span class="badge @(Model.Preferences.Notifications.Email ? "bg-success" : "bg-secondary")">
                                @(Model.Preferences.Notifications.Email ? "Enabled" : "Disabled")
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Orders -->
        @if (Model.Orders != null && Model.Orders.Count > 0)
        {
            <div class="info-container">
                <h2 class="section-header">Order History</h2>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Items</th>
                            <th>Total Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>@order.OrderId</td>
                                <td>@order.Items.Count item(s)</td>
                                <td>$@order.Amount.ToString("F2")</td>
                                <td>
                                    <span class="badge @(order.Status == "Completed" ? "bg-success" : 
                                                       order.Status == "Pending" ? "bg-warning" : "bg-secondary")">
                                        @order.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</body>
</html>